@page
@model HospitalManager.IDP.Pages.Account.Registration.IndexModel

@{
    <div>
        <div class="page-header">
            <h1>User Registration</h1>
        </div>

        <partial name="_ValidationSummary"/>

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="Input.ReturnUrl"/>
                            <fieldset>
                                <div class="form- group">
                                    <label asp-for="Input.Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="Input.Email" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                                </div>

                                @* TODO: Remove after invitation implementation *@
                                <div>
                                    <input type="radio" asp-for="Input.Role" checked value="Pacient" id="rolePacient" />
                                    <label for="rolePacient">Pacient</label>
                                    <input type="radio" asp-for="Input.Role" value="Doktor" id="roleDoktor" />
                                    <label for="roleDoktor">Doktor</label>
                                </div>
                                
                                <div class="form-group">
                                    <button class="btn btn-primary">Register</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}