                <td>RTG hrudníka</td>
                <td>20. november 2024</td>
                <td>Bez nálezu</td>
                <td>28.2.2222</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-end">
<button class="btn btn-warning mt-2" data-bs-toggle="offcanvas" data-bs-target="#editPatientOffcanvas">
    Editovať údaje
</button>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="editPatientOffcanvas" aria-labelledby="editPatientOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 id="editPatientOffcanvasLabel">Editovať údaje pacienta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form>
            <div class="mb-3">
                <label for="patientName" class="form-label">Meno</label>
                <input type="text" class="form-control" id="patientName">
            </div>
            <div class="mb-3">
                <label for="birthDate" class="form-label">Dátum narodenia</label>
                <input type="date" class="form-control" id="birthDate" value="1980-01-01">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">PSČ</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Mesto</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Štát</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Ulica</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Číslo domu</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telefón</label>
                <input type="text" class="form-control" id="phone">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email">
            </div>
            <button type="submit" class="btn btn-success">Uložiť zmeny</button>
        </form>
    </div>
</div>

@code {
[Parameter] public string BirthNumber { get; set; }
}
