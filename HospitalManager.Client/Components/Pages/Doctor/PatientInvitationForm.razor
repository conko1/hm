@page "/invite"
@attribute [StreamRendering]

<PageTitle>Patient Invitation</PageTitle>
<main class="form-signin w-100 m-auto mt-5" style="max-width: 600px;">
    <form>
        <h1 class="h3 mb-3 fw-normal">Pre zaregistrovanie pacienta vyplnte údaje</h1>
        <div class="form-floating mt-2">
            <input type="name" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Name</label>
        </div>
        <div class="form-floating">
            <input type="surrname" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Surrname</label>
        </div>
        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="mt-5">
            <button class="btn btn-primary w-100 py-2" type="submit">Send invitation</button>
        </div>
        
    </form>
</main>


